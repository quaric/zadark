{
  "manifest_version": 3,
  "name": "ZaDark â€“ Best Dark Theme for Zalo",
  "version": "3.0",
  "description": "The best dark theme for your Zalo Web.",
  "icons": {
    "16": "./assets/images/za-dark-icon@16.png",
    "32": "./assets/images/za-dark-icon@32.png",
    "48": "./assets/images/za-dark-icon@48.png",
    "128": "./assets/images/za-dark-icon@128.png"
  },
  "author": "NCDAi Studio",
  "homepage_url": "https://www.facebook.com/iamncdai",
  "content_scripts": [
    {
      "matches": [
        "*://chat.zalo.me/*"
      ],
      "run_at": "document_end",
      "css": [
        "./assets/css/za-dark.css"
      ],
      "js": [
        "./assets/js/utils.js",
        "./assets/js/za-dark.js"
      ]
    }
  ],
  "background": {
    "service_worker": "./assets/js/background.js"
  },
  "permissions": [
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "*://chat.zalo.me/*"
  ],
  "action": {
    "default_popup": "./views/popup.html",
    "default_icon": {
      "16": "./assets/images/za-dark-icon@16.png",
      "32": "./assets/images/za-dark-icon@32.png",
      "48": "./assets/images/za-dark-icon@48.png",
      "128": "./assets/images/za-dark-icon@128.png"
    }
  }
}